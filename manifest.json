{
    "manifest_version": 2,
    "name": "Moodle Auto Login - Innopolis",  
    "description": "Autologin to LMS at Innopolis University",  
    "version": "1.0",    
    "browser_action": { 
        "default_icon": "icon.png",
        "default_popup": "popup.html"  
    },

    "icons": { "16": "icon16.png",
	           "48": "icon48.png",
	          "128": "icon128.png" },
    "permissions": ["storage", "tabs", "https://moodle.innopolis.university/*", "cookies", "https://sso.university.innopolis.ru/*"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}